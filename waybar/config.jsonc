    "tooltip-format": "<span color='#ffa216'>{ifname}:</span>{ipaddr}"
  },
  "clock": {
    "format": "<span color='#89b4fa'>ó°¥” </span><span color='#cdd6f4'>{:%H:%M}</span> <span color='#89b4fa'>ðŸ“†</span>",
