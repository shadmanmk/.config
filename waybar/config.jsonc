  "height": 30,
  "spacing": 0,
  "margin": "2",
  "modules-left": ["custom/launcher"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["memory", "network", "tray", "clock"],
  // Hyprland-specific configuration
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "(one)",
      "2": "(two)",
      "3": "(three)",
      "4": "(four)",
      "5": "(five)",
      "6": "(six)",
      "7": "(seven)",
      "8": "(eight)",
      "default": "â—‹",
